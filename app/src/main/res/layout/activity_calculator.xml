<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prasoon.calculator.Calculator"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#e7e0e0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="#f7ab1d"
            android:textColor="#ffffff"
            android:id="@+id/op"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="65"
            android:background="#f7ab1d"
            android:textColor="#ffffff"
            android:id="@+id/result"
            android:gravity="center_vertical|right"
            android:textSize="30dp"
            android:hint="result" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/edit"
        android:background="#f7ab1d"
        android:textColor="#556677"
        android:textSize="30dp"
        android:gravity="right" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button1"
            android:text="1"
            android:textSize="40dp"
            android:background="#fbe708" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button2"
            android:text="2"
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button3"
            android:text="3"
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/plus"
            android:text="+"
            android:textSize="40dp"
            android:background="#f11c23" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/sin"
            android:text="Sin"
            android:textSize="20dp"
            android:background="#f11c23" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button4"
            android:text="4"
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button5"
            android:text="5"
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button6"
            android:text="6"
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/minus"
            android:text="-"
            android:textSize="40dp"
            android:background="#f11c23" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/cos"
            android:text="cos"
            android:textSize="20dp"
            android:background="#f11c23" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button7"
            android:text="7"
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button8"
            android:text="8"
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button9"
            android:text="9"
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/mul"
            android:text="X"
            android:textSize="40dp"
            android:background="#f11c23" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/log"
            android:text="log"
            android:textSize="20dp"
            android:background="#f11c23" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/point"
            android:text="."
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/button0"
            android:text="0"
            android:textSize="40dp"
            android:background="#fbe708" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/equal"
            android:text="="
            android:background="#f7ab1d"
            android:textSize="40dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/div"
            android:text="/"
            android:textSize="40dp"
            android:background="#f11c23" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18.4"
            android:id="@+id/clear"
            android:text="c"
            android:textSize="40dp"
            android:background="#51e9fe" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#e7e0e0"
        android:layout_weight="8"
        android:src="@drawable/back"
        android:id="@+id/back" />


</LinearLayout>
